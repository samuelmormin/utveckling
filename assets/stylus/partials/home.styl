    .home-intro-section
        background-image url('/utveckling/assets/img/home_background.jpg')
        background-repeat no-repeat
        background-attachment fixed
        background-position center
        width 100wh
        height 100vh
        
        .header
            height 10vh
            line-height 10vh
            
            .logo
                padding 0 0 0 90px
                vertical-align middle
                
            .menu-button
                line-height 10vh
                float right
                
                .clearboth
                    clear both
                    
                img
                    padding 0 90px 0 0
                    vertical-align middle
                    
        .page-intro
            width 100wh
            height 90vh
            text-align center
            padding-top 20vh
            
            h1
                color white
                font-size 24px
                font-weight 300
                
                strong
                    font-weight 700
                    font-size 30px
                
            .tags
                color #A899B7
                margin 40px 0
                font-size 18px
                font-weight 700
            
        .button-savoir-plus
            display inline-block
            text-align center
            padding 10px 20px 10px 20px
            margin 0 auto
            background-color #A899B7
            border none
            border-radius 4px
            color #ffffff
            text-decoration none
            font-size 12px
            font-weight 700