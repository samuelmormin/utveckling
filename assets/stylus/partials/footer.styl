    .newsletter
        height 100px
        background-color #181A27
        color #ffffff
        text-align left
        font-size 12px
        overflow hidden
        padding-left 8.33%
        padding-right 8.33%
        
        h2
            display inline-block
            padding-left 20px
            font-weight 900
            font-size 30px
            line-height 100px
            vertical-align top
            
        .text-newsletter-home
            height 100px
            width 300px
            display inline-block

            p
                font-size 14px
                line-height 21px
                color #fefefe
                margin 20px 0px 0px 50px
                
        .input-newsletter
            display inline-block
            vertical-align top
            padding 20px 0px 0px 40px

            input
                width 250px
                border-bottom 1px solid #fefefe
                padding 20px 0px 30px 0px
            
        .button-savoir-plus-contact
            display block
            float right
            width 150px
            text-align center
            padding 10px 20px 10px 20px
            margin 40px 20px 40px 0
            background-color #A899B7
            border none
            border-radius 4px
            color #ffffff
            text-decoration none
            font-size 12px
            font-weight 700
            vertical-align top

    footer
        display block
        width 100%
        padding-left 8.33%
        height 50px
        background-color #181818
        color #ffffff
        text-align left
        line-height 50px
        font-size 12px
        
        p
            padding-left 20px