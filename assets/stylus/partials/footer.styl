    .newsletter
        height 100px
        background-color #181A27
        color #ffffff
        text-align left
        font-size 12px
        overflow hidden
        padding-left 8.33%
        padding-right 8.33%
        line-height 100px
        
        h2
            display inline-block
            padding-left 20px
            font-weight 900
            font-size 30px
            line-height 100px
            vertical-align top
            
        .text-newsletter-home
            height 100px
            width 300px
            line-height 1px
            display inline-block
            vertical-align middle

        p
            width 250px
            vertical-align middle
            display inline-block
            font-size 11px
            line-height 16px
            font-weight 300
            color #fefefe
            margin 0px 0px 0px 50px
                
        .input-newsletter
            height 100px
            display inline-block
            vertical-align top
            padding 0px 0px 0px 0px

            input
                display inline-block
                vertical-align middle
                width 250px
                height 50px
                border-bottom 1px solid #A899B7
                padding 0px 0px 0px 0px
            
        .button-savoir-plus-contact
            display inline-block
            width 150px
            text-align center
            padding 15px 20px 12px 20px
            margin 0px 20px 0px 20px
            background-color #181A27
            border 1px solid #A899B7
            color #A899B7
            text-decoration none
            font-size 12px
            font-weight 700
            vertical-align middle
            line-height 12px

    footer
        display block
        width 100%
        padding-left 8.33%
        height 50px
        background-color #181818
        color #ffffff
        text-align left
        line-height 50px
        font-size 12px
        
        p
            padding-left 20px