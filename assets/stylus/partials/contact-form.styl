.contact
    background-color #f4f4f4
    text-align center
    
.form-intro
    font-size 18px
    line-height 27px
    text-align center
    font-weight 300
    margin-bottom 50px
    margin-top 50px
    
.form-message-bloc
    display inline-block
    width 100%
    vertical-align bottom
    line-height 1px
        
.form-label
    width 100%
    height 24px
    display inline-block
    font-size 11px
    font-weight 900
    color #2D3049
    text-align left
    
.form-message
    display inline-block
    vertical-align bottom
    width 100%
    height 204px
    margin-top 24px
    border 1px solid #2D3049
    text-align left

input[type=text]
    height 36px
    text-align left
    
.form-input
    display inline-block
    width 100%
    height 36px
    border-bottom 1px solid #2D3049
    margin-bottom 36px
    text-align left

.button-send-message
    display inline-block
    text-align center
    padding 15px 20px 12px 20px
    margin 0px 20px 50px 20px
    background-color none
    border 1px solid #A899B7
    color #A899B7
    text-decoration none
    font-size 12px
    font-weight 700
    vertical-align middle
    line-height 12px