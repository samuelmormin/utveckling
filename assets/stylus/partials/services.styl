.services-dev
    height 500px
    background-color #ffffff
    display table
    padding-top 50px
    
    h2
        font-size 30px
        font-weight 900
        color #2D3049
        padding 0px 0
        
    .tags
        display inline
        font-size 11px
        
.service-illustration
    background-image url('/utveckling/assets/img/services_img.jpg')
    height 500px
        
.text
    display table-cell
    height 200px
    background-color red
    padding 50px 20px
    margin 0 20px
    vertical-align middle
    
.button-contacter-intro
                    display inline-block
                    width 150px
                    text-align center
                    padding 10px 20px 10px 20px
                    margin 40px auto
                    margin-right 20px
                    background-color none
                    border 1px solid #A899B7
                    border-radius 4px
                    color #A899B7
                    text-decoration none
                    font-size 12px
                    font-weight 700
                    
.services-intro-section
    background-image url('/utveckling/assets/img/services_intro_img.png')
    background-repeat no-repeat
    background-attachment fixed
    background-position center
    width 100wh
    height 100vh
    
    .header
        height 10vh
        line-height 10vh
        
        .logo
            padding 0 0 0 90px
            vertical-align middle
            
        .menu-button
            line-height 10vh
            float right
            
            .clearboth
                clear both
                
            img
                padding 0 90px 0 0
                vertical-align middle
    .services-intro
        width 100wh
        height 90vh
        text-align center
        padding-top 20vh
        
        h1
            color white
            font-size 24px
            font-weight 300
            
            strong
